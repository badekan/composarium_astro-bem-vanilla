---
import CsrNebula, { LavaLampColor } from "./nebula.astro";
---

<div class="nebula-box">
  <CsrNebula class="nebula-box__el" color={LavaLampColor.VariantB}/>
</div>
  

<style lang="scss">
  @use "../../../scss/config" as *;
  
  .nebula-box{
    position: relative;
    margin: 0 auto;
    @include square(800);
    background: $white;

    &__el{
      position: absolute;
      z-index: 8;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);

      width: 100%;
      height: 100%;
      overflow: hidden;
    }
  }
  
</style>