---
import CsrGlossyBorder from "./glossy-border.astro";

const items = [];
for (let i = 0; i < 9; i++) {
  items.push(i+1);
}
---

  <div class="glossy-border-block">
    {items.map((item) => (
      <CsrGlossyBorder>
        {item}
      </CsrGlossyBorder>
    ))}
  </div>

<style lang="scss">
  @use "../../../scss/config" as *;
  
  :root{
    --layout-component--background: #{$gray-900};
  }

  .glossy-border-block{
    width: 100%;
    padding: $gutter;
    gap: rem(20);
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }
</style>