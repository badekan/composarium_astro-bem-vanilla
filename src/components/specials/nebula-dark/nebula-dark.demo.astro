---
import CsrAuroraDark, { LavaLampColor } from "./nebula-dark.astro";
---

<div class="nebula-box">
  <h1 class="nebula-box__title">
    Nebula
  </h1>
  <CsrAuroraDark class="nebula-box__el" color={LavaLampColor.VariantB}/>
</div>
  

<style lang="scss">
  @use "../../../scss/config" as *;
  
  :root{
    --layout-component--background: #{$black};
  }

  .nebula-box{
    position: relative;
    margin: 0 auto;
    @include square(800);
    background: $black;

    &__title{
      position: absolute;
      z-index: 9;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);

      font-size: rem(70);
      font-weight: 900;
      line-height: 1;
      text-align: center;
      color: $white;
      font-optical-sizing: auto;
      font-weight: 700;
    }

    &__el{
      position: absolute;
      z-index: 8;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);

      width: 100%;
      height: 100%;
      overflow: hidden;
    }
  }
  
</style> 